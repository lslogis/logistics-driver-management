# Database Configuration
DATABASE_URL="postgresql://postgres:your-strong-password@localhost:5432/logistics"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-password
POSTGRES_DB=logistics
POSTGRES_PORT=5432

# Application Configuration
NODE_ENV=development
APP_PORT=3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32-command-example-below
# Generate with: openssl rand -base64 32
# Example: Pk/m80qp8vrq4lmgoBF9NFFq8KNv1t+xCqEc0FXb+Dk=


# PgAdmin Configuration
PGADMIN_EMAIL=admin@logistics.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Logging
LOG_LEVEL=info

# File Upload
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10MB

# CORS
ALLOWED_ORIGINS=http://localhost:3000

# 카카오지도 API 설정
NEXT_PUBLIC_KAKAO_API_KEY=your-kakao-rest-api-key-here
# 카카오톡 공유 API 설정 
NEXT_PUBLIC_KAKAO_JAVASCRIPT_KEY=your-kakao-javascript-key-here

# Feature Flags
NEXT_PUBLIC_FEATURE_RATES=true