# Staging Environment Configuration
# Copy this file to .env.staging and update with actual values

# Environment
NODE_ENV=staging

# Application
APP_NAME="Logistics Driver Management - Staging"
APP_URL=https://staging.logistics.example.com
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@staging-db.example.com:5432/logistics_staging
TEST_DATABASE_URL=postgresql://user:password@staging-db.example.com:5432/logistics_test

# NextAuth Configuration
NEXTAUTH_URL=https://staging.logistics.example.com
NEXTAUTH_SECRET=generate-secure-secret-with-openssl-rand-base64-32-command
# Generate staging secret with: openssl rand -base64 32
# Use same secret as production for session compatibility
NEXTAUTH_JWT_SECRET=generate-jwt-secret-with-openssl-rand-base64-32-command

# Database Configuration
DB_HOST=staging-db.example.com
DB_PORT=5432
DB_NAME=logistics_staging
DB_USER=logistics_user
DB_PASSWORD=your-staging-db-password
DB_SSL=true
DB_TIMEZONE=Asia/Seoul

# Redis Cache (if using)
REDIS_URL=redis://staging-redis.example.com:6379
REDIS_PASSWORD=your-staging-redis-password

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@logistics.example.com
SMTP_PASSWORD=your-staging-smtp-password
SMTP_FROM=noreply@logistics.example.com

# File Storage
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=csv,xlsx,pdf,jpg,png

# API Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_DEBUG_PANEL=true
ENABLE_MAINTENANCE_MODE=false

# External Services
NOTIFICATION_SERVICE_URL=https://staging-notifications.example.com
PAYMENT_SERVICE_URL=https://staging-payments.example.com

# Security
CORS_ORIGIN=https://staging.logistics.example.com
CSRF_SECRET=your-staging-csrf-secret-here
SESSION_SECRET=your-staging-session-secret-here

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=staging
HEALTH_CHECK_URL=/api/health

# Docker specific
POSTGRES_USER=logistics_user
POSTGRES_PASSWORD=your-staging-postgres-password
POSTGRES_DB=logistics_staging
PGADMIN_DEFAULT_EMAIL=admin@logistics.example.com
PGADMIN_DEFAULT_PASSWORD=your-staging-pgadmin-password

# Performance
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000
API_TIMEOUT=30000

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30