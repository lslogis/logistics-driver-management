{
  "name": "logistics-driver-management",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:docker": "docker-compose up --build",
    "dev:fresh": "npm run clear-cache && npm run dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:charter": "node scripts/test-charter-system.js",
    "test:migration": "node scripts/test-charter-migration.js",
    "test:migration:api": "node scripts/test-charter-migration.js --api-only",
    "test:migration:db": "node scripts/test-charter-migration.js --db-only",
    "test:migration:settlement": "node scripts/test-charter-migration.js --settlement",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "playwright:install": "playwright install",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:charter": "node scripts/run-charter-migration.js",
    "db:migrate:trips-to-charters": "node scripts/migrate-trips-to-charters.js",
    "db:migrate:trips-to-charters:backup": "node scripts/migrate-trips-to-charters.js --backup-only",
    "db:migrate:trips-to-charters:validate": "node scripts/migrate-trips-to-charters.js --validate-only",
    "db:migrate:trips-to-charters:dry-run": "node scripts/migrate-trips-to-charters.js --dry-run",
    "db:migrate:settlement": "node scripts/run-settlement-migration.js",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:charter": "node scripts/seed-charter-data.js",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "db:studio": "prisma studio",
    "clear-cache": "rimraf .next && npm cache clean --force",
    "clear-cache:full": "node scripts/clear-all-cache.js",
    "audit:charter": "bash scripts/audit-charter-cleanup.sh",
    "audit:charter:verbose": "bash scripts/audit-charter-cleanup.sh --verbose",
    "audit:charter:quick": "bash scripts/audit-charter-cleanup.sh --skip-tests --skip-db",
    "verify:migration": "npm run audit:charter && echo 'Trip â†’ Charter migration verified successfully!'",
    "ci:verify": "npm run audit:charter --skip-tests"
  },
