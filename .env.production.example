# Production Environment Configuration
# Copy this file to .env.production and update with actual values

# Environment
NODE_ENV=production

# Application
APP_NAME="Logistics Driver Management"
APP_URL=https://logistics.example.com
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@prod-db.example.com:5432/logistics_production
TEST_DATABASE_URL=postgresql://user:password@prod-db.example.com:5432/logistics_test

# NextAuth Configuration
NEXTAUTH_URL=https://logistics.example.com
NEXTAUTH_SECRET=generate-secure-secret-with-openssl-rand-base64-32-command
# Generate production secret with: openssl rand -base64 32
# Must be same across all production instances
# Example: Pk/m80qp8vrq4lmgoBF9NFFq8KNv1t+xCqEc0FXb+Dk=
NEXTAUTH_JWT_SECRET=generate-jwt-secret-with-openssl-rand-base64-32-command

# Database Configuration
DB_HOST=prod-db.example.com
DB_PORT=5432
DB_NAME=logistics_production
DB_USER=logistics_user
DB_PASSWORD=your-secure-production-db-password
DB_SSL=true
DB_TIMEZONE=Asia/Seoul

# Redis Cache
REDIS_URL=redis://prod-redis.example.com:6379
REDIS_PASSWORD=your-secure-production-redis-password

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@logistics.example.com
SMTP_PASSWORD=your-secure-production-smtp-password
SMTP_FROM=noreply@logistics.example.com

# File Storage
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=csv,xlsx,pdf,jpg,png

# API Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=500

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_DEBUG_PANEL=false
ENABLE_MAINTENANCE_MODE=false

# External Services
NOTIFICATION_SERVICE_URL=https://notifications.example.com
PAYMENT_SERVICE_URL=https://payments.example.com

# Security
CORS_ORIGIN=https://logistics.example.com
CSRF_SECRET=your-secure-production-csrf-secret-here
SESSION_SECRET=your-secure-production-session-secret-here

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
HEALTH_CHECK_URL=/api/health

# Docker specific
POSTGRES_USER=logistics_user
POSTGRES_PASSWORD=your-secure-production-postgres-password
POSTGRES_DB=logistics_production
PGADMIN_DEFAULT_EMAIL=admin@logistics.example.com
PGADMIN_DEFAULT_PASSWORD=your-secure-production-pgadmin-password

# Performance
DATABASE_POOL_SIZE=50
DATABASE_TIMEOUT=15000
API_TIMEOUT=15000

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=90

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/logistics.crt
SSL_KEY_PATH=/etc/ssl/private/logistics.key

# CDN & Assets
CDN_URL=https://cdn.logistics.example.com
STATIC_ASSETS_URL=https://assets.logistics.example.com

# Cache Configuration
CACHE_TTL=3600
REDIS_CLUSTER_MODE=false

# Monitoring & Alerting
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
ALERT_EMAIL=ops@logistics.example.com